{% extends 'main.twig' %}

{% block body %}
    <div>
        <form method="post" action="{{ base_url('auth/login', get_protocol()) }}">
            <input type="hidden" name="{{ this.security.get_csrf_token_name() }}" value="{{ this.security.get_csrf_hash() }}" />
            <div class="row">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <h1>{{ lang('please_sign_in')  }} </h1>
                    <div class="form-group">
                        <label for="inputEmail">{{ lang('email') }}</label>
                        <input type="text"
                               name="email"
                               id="inputEmail"
                               class="form-control"
                               placeholder="{{ lang('email_address') }}"
                               value="{{ set_value('email') }}"
                            >
                            <div class="errors-list" style="color:red;">{{ form_error('email')|raw }}</div>
                    </div>
                    <div class="form-group">
                        <label for="inputPassword">{{ lang('password') }}</label>
                        <input type="password" name="password" id="inputPassword" class="form-control" placeholder="{{ lang('password') }}" >
                        <div class="errors-list" style="color:red;">{{ form_error('password')|raw }}</div>
                    </div>
                    <div>
                        <a href="{{ base_url('auth/forgot_password', get_protocol()) }}">{{ lang('forgot_password') }}?</a>
                    </div>
                    <div>

                    </div>
                    <div class="text-right">
                        <a href="{{ base_url('auth/registration', get_protocol()) }}" class="btn btn-link">{{ lang('registration') }}</a>
                        <input type="submit" value="{{ lang('login') }}" class="btn btn-primary">
                    </div>
                </div>
                <div class="col-md-4"></div>
            </div>

        </form>
    </div>
{%  endblock %}